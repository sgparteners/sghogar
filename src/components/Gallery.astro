<section id="galeria" class="py-20 bg-accent">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-playfair font-bold text-center mb-12" data-aos="fade-up">
      Galería de Inspiración
    </h2>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
      {Array.from({ length: 8 }).map((_, index) => (
        <div 
          class="relative aspect-square overflow-hidden rounded-lg"
          data-aos="zoom-in"
          data-aos-delay={index * 100}
        >
          <img
            src={`/images/gallery-${index + 1}.jpg`}
            alt={`Galería imagen ${index + 1}`}
            class="w-full h-full object-cover hover:scale-110 transition-transform duration-300"
          />
        </div>
      ))}
    </div>
  </div>
</section>