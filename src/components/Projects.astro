---
const projects = [
  {
    title: "Residencial Elite",
    category: "Proyecto Residencial",
    image: "https://images.unsplash.com/photo-1616486338812-3dadae4b4ace?w=800",
    description: "Transformación completa de una villa de lujo"
  },
  {
    title: "Hotel Majestic",
    category: "Proyecto Hotelero",
    image: "https://images.unsplash.com/photo-1618221195710-dd6b41faaea6?w=800",
    description: "Renovación de 200 habitaciones"
  },
  {
    title: "Restaurante Fusion",
    category: "Proyecto Comercial",
    image: "https://images.unsplash.com/photo-1507652313519-d4e9174996dd?w=800",
    description: "Diseño textil integral para restaurante"
  }
];
---

<section class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <h2 
      class="text-4xl font-playfair font-bold text-center mb-16"
      data-aos="fade-up"
    >
      Proyectos Destacados
    </h2>
    
    <div class="grid md:grid-cols-3 gap-8">
      {projects.map((project, index) => (
        <div 
          class="group relative overflow-hidden rounded-xl"
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <img 
            src={project.image} 
            alt={project.title}
            class="w-full h-[400px] object-cover transform group-hover:scale-110 transition-transform duration-700"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
              <span class="text-sm uppercase tracking-wider">{project.category}</span>
              <h3 class="text-xl font-bold mb-2">{project.title}</h3>
              <p class="text-gray-300">{project.description}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>