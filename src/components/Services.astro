---
const services = [
  {
    title: "Asesoramiento Personalizado",
    description: "Nuestro equipo te ayudará a encontrar la mejor solución para tu hogar"
  },
  {
    title: "Toma de Medidas",
    description: "Servicio gratuito de medición en tu domicilio"
  },
  {
    title: "Confección a Medida",
    description: "Fabricamos tus cortinas y complementos según tus necesidades"
  },
  {
    title: "Instalación Profesional",
    description: "Montaje realizado por personal cualificado"
  }
];
---

<section class="py-20 bg-accent">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-playfair font-bold text-center mb-12" data-aos="fade-up">
      Nuestros Servicios
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {services.map((service, index) => (
        <div 
          class="bg-white p-6 rounded-lg shadow-lg"
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <h3 class="text-xl font-bold mb-4 text-black">{service.title}</h3>
          <p class="text-gray-600">{service.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>